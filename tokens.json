async function verifyUserAccess(userEmail) {
    const response = await fetch('https://mimoki1.github.io/TechPaletteMentor/tokens.json');
    const validUsers = await response.json();

    console.log("Valid users list:", validUsers); // Add this line for debugging

    if (validUsers.includes(userEmail)) {
        document.getElementById('app-content').style.display = 'block';
    } else {
        window.location.href = 'purchase.html';
    }
}
